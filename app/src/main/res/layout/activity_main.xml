<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_gravity="center">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#F5F5F5">

        <ImageView
                android:layout_width="53dp"
                android:layout_height="89dp" app:srcCompat="@drawable/moto"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.407"
                app:layout_constraintVertical_bias="0.975" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" android:layout_marginBottom="32dp"/>
        <TextView
                android:text="opc3"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:id="@+id/textView"
                android:rotation="270"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintBottom_toTopOf="@+id/textView2" android:gravity="center"
                android:fontFamily="@font/rubik_medium" android:textSize="16sp" android:textColor="#005B1B"/>
        <TextView
                android:text="opc2"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:id="@+id/textView3"
                android:rotation="270"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintBottom_toTopOf="@+id/textView" android:fontFamily="@font/rubik_bold"
                android:textSize="16sp" android:textColor="#005B1B"/>
        <TextView
                android:text="Opc1"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:id="@+id/textView4"
                android:rotation="270"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintBottom_toTopOf="@+id/textView3" android:fontFamily="@font/rubik_medium"
                android:textSize="16sp" android:textColor="#373131"/>
        <TextView
                android:text="Opc4"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:id="@+id/textView2"
                android:rotation="270"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.523"
                android:layout_marginBottom="80dp" app:layout_constraintBottom_toTopOf="@+id/imageView"
                android:fontFamily="@font/rubik_medium" android:textColor="#373131"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:text="Hola, Pedro!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:fontFamily="@font/rubik_bold"
            android:textColor="@android:color/background_dark" android:textSize="24sp"/>
    <TextView
            android:text="Let`s find your favorite body care products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="@+id/textView7" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginTop="4dp" android:textColor="@android:color/background_dark" android:textSize="12sp"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp" tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imageView2"/>
</androidx.constraintlayout.widget.ConstraintLayout>

